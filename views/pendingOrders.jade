extends layout

block content
  h1= title

  h2 List of pending orders
    form(action="/orders", method="post", id="completing")
    ul
      each order in pendingOrdersList
        p
        | customer name: #{order.customerName} 
        each ingredient in order.ingredients
          div(class="desiredIngredients")
          |#{ingredient.name}
        p 
          input(type="checkbox", value=order._id , class="completeMe")
          |Order completed?
          
    button(type='submit')
      | Submit
