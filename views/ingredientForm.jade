extends layout

block content
  h1= title

  form(action="/ingredient/create", method='post', id="ingredientform")
    h2 Submit an ingredient 
    | Ingredient name
    input(type="text", name='name', id="ingredientName")
    | Cost
    input(type="text", name='cost', id="ingredientCost")
    button(type='submit')
      | Submit

